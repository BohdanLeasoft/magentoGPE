<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" comment="Sales Order Table">
        <column xsi:type="varchar" name="gingerpay_transaction_id" nullable="true" length="255" comment="Gingerpay Transaction Id"/>
        <index referenceId="SALES_ORDER_GINGERPAY_TRANSACTION_ID" indexType="btree">
            <column name="gingerpay_transaction_id"/>
        </index>
        <column xsi:type="varchar" name="gingerpay_vault_token" nullable="true" length="255" comment="Gingerpay Vault Token"/>
        <index referenceId="SALES_ORDER_GINGERPAY_VAULT_TOKEN" indexType="btree">
            <column name="gingerpay_vault_token"/>
        </index>
        <column xsi:type="int" name="gingerpay_next_payment_date" nullable="true" comment="Gingerpay Next Payment Date"/>
        <index referenceId="SALES_ORDER_GINGERPAY_NEXT_PAYMENT_DATE" indexType="btree">
            <column name="gingerpay_next_payment_date"/>
        </index>
        <column xsi:type="varchar" name="gingerpay_recurring_periodicity" nullable="true" length="255" comment="Gingerpay Recurring Periodicity"/>
        <index referenceId="SALES_ORDER_GINGERPAY_RECURRING_PERIODICITY" indexType="btree">
            <column name="gingerpay_recurring_periodicity"/>
        </index>
    </table>
</schema>
